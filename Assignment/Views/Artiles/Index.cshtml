@model IEnumerable<Week8LoginDemo.Models.Artile>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.ActionLink("Create New (logged in individual)", "CreateIndividual")
</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleText)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleText)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.NewsId }) |
